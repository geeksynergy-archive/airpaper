<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/temperature_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/temperature_degree"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="58dp"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@+id/City"
                android:src="@drawable/sunny" />

            <TextView
                android:id="@+id/temperature_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="31Â°"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="100sp" />

            <ImageView
                android:id="@+id/locationImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/time"
                android:layout_alignStart="@+id/day"
                android:layout_gravity="center_vertical"
                android:src="@drawable/map" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:text="Monday"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperature_degree"
                android:text="27th"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/State"
                android:layout_toEndOf="@+id/locationImage"
                android:text="Bengaluru"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/temp_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperature_image"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/temperature_degree"
                android:text="Sunny, Dry"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/locationImage"
                android:layout_toEndOf="@+id/locationImage"
                android:text="Karnataka"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/time"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@id/temp_status"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/State"
                android:text="2:15pm"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>