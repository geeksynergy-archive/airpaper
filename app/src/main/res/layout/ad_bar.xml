<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_bar"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#fff"
    android:clickable="true"
    android:elevation="4dp"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ad_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ad_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/ad_title"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ad_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ad_header"
                android:text="@string/ad_link"
                android:autoLink="web"
                android:textColor="#7CB342"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/ad_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad_link"
                android:text="@string/ad_info"
                android:textColor="#5d5d5d"
                android:textSize="14sp"
                android:textStyle="normal" />

        </RelativeLayout>

</android.support.v7.widget.Toolbar>
